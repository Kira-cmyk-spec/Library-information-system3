<Page x:Class="Библиотечной_информационная_система.PageAppWorker.PageMenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Библиотечной_информационная_система.PageAppWorker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenuAdmin">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainMenu" NavigationUIVisibility="Hidden" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
        <DockPanel Grid.Row="0" Grid.Column="2"  >
            <Button x:Name="book_buton" Content="Книги" Margin="30 " Click="book_buton_Click"/>


        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="1" >

            <Button x:Name="Library_card" Content="Читательские билеты" Margin="30 " Click="Library_card_Click"/>

        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="0" >

            <Button x:Name="Client" Content="Студенты" Margin="30 " Click="Client_Click"/>

        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="3" >

            <Button x:Name="Worker" Content="Работники" Margin="30 " Click="Worker_Click"/>

        </DockPanel>


    </Grid>
</Page>
