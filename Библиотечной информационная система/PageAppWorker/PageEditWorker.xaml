<Page x:Class="Библиотечной_информационная_система.PageAppWorker.PageEditWorker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Библиотечной_информационная_система.PageAppWorker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEditWorker">

    <Grid>
        <StackPanel >

            <Label Content="Роль"/>
            <TextBox Text="{Binding id_role}"/>
            <Label Content="Имя"/>
            <TextBox Text="{Binding Name}"/>
            <Label Content="Фамилия"/>
            <TextBox Text="{Binding Surname}"/>
            <Label Content="Отчество"/>
            <TextBox Text="{Binding Patronymic}"/>
            <Label Content="Логин"/>
            <TextBox Text="{Binding Login}"/>
            <Label Content="Пароль"/>
            <TextBox Text="{Binding Password}"/>
            <Label Content="Не Удален\Удален"/>
            <TextBox Text="{Binding IsDelete}"/>


            <Button Content="Сохранить изменения" Click="CliventSave"/>
        </StackPanel>
    </Grid>
</Page>
