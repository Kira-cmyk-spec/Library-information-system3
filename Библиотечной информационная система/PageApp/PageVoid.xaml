<Page x:Class="Библиотечной_информационная_система.PageApp.PageVoid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Библиотечной_информационная_система.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageVoid">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="Логин"/>
            <TextBox x:Name="bdloguin" Margin="20"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="bdpassword" Margin="20" />
            <Button x:Name="void" Content="Войти" Click="void_Click"/>
            <Button x:Name="forgot_password" Content="Забыли пароль? " Foreground="Blue"  Background="Black" Click="forgot_password_Click"/>
           
           

        </StackPanel>
    </Grid>
</Page>
